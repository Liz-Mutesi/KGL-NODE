doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Document
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx' crossorigin='anonymous')
body
    .container
    h5 Hello, #{username}
    h3 Order List
    if sale.length
        table.table
            thead.thead-dark
                tr
                    th(scope='col') #
                    th(scope='col') Customer
                    th(scope='col') Account Type
                    th(scope='col') Product
                    th(scope='col') Quantity
                    th(scope='col') Price
                    th(scope='col') Amount
                    th(scope='col') Action
                    
            tbody
            each order in sale
                tr
                    th(scope='row') #{order._id}
                    td #{order.customer}
                    td #{order.type}
                    td #{order.item}
                    td #{order.quantity}
                    td #{order.price}
                    td #{order.amount}
                    td
                        form(method="POST", action="/sale/saleList")
                            input(type="hidden", name="_id", value=order._id)
                            button(type="submit") DELETE
                    td  
                        a(href="/sale/editSales/" + order._id) Edit

    else
        p There are no registered orders posted
    br
    a.btn.btn-warning(href="/logout") Log out
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js' integrity='sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa' crossorigin='anonymous')
