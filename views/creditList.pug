doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Document
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx' crossorigin='anonymous')
  link(rel='stylesheet' href='/css/lists.css')
  link(rel='stylesheet' href='/css/directorDash.css')
  link(rel='stylesheet' href='https://fonts.googleapis.com/css2?family=Material+Symbols+Sharp')
body
    .sidebar
        .logo-details
            i.bx.bx
                img(src="/images/KARIBU.jpg", alt="logo", class='logo-img')
            span.logo_name
        ul.nav-links
            li
                a.active(href='/managerDash'  id='sideNav1')
                    span.material-symbols-sharp
                        | grid_view
                    span.links Dashboard
            li
                a(href='/sale')
                    span.material-symbols-sharp
                        | receipt_long
                    span.links Sales
            li
                a(href='#')
                    span.material-symbols-sharp
                        | people
                    span.links Customers
            li
                a(href='#')
                    span.material-symbols-sharp
                        | inventory
                    span.links_name Stock
            li
                a(href='#')
                    span.material-symbols-sharp
                        | receipt
                    span.links_name Generate Receipt
            li
                a(href='#')
                    span.material-symbols-sharp
                        | description
                    span.links_name Generate Invoice
            li.log_out
                a(href='/logout')
                    span.material-symbols-sharp
                        | logout
                    span.links Log out
            .container-list
                h3 KARIBU GROCERIES
                h3 Jinja Branch
                br
                h5 Hello, #{name}
                h3(style="text-align:center" id='title') Credit List
            if creditSale.length
                table.table(id='credit-table')
                    thead.thead-dark
                        tr(style='background-color: rgb(204, 202, 202);')
                            //th(scope='col') credit No.
                            th(scope='col') Customer
                            th(scope='col') ID No.
                            th(scope='col') Location
                            th(scope='col') Contact
                            th(scope='col') Item Name
                            th(scope='col') Produce Type
                            th(scope='col') Quantity
                            th(scope='col') Amount
                            th(scope='col') Due Date
                            th(scope='col') Sales Agent
                            th(scope='col') Dispatch Date
                            th(scope='col') Delete
                            th(scope='col') Edit
                            
                    tbody
                    each credit in creditSale
                        tr
                            //th(scope='row') #{credit._id}
                            td #{credit.buyer}
                            td #{credit.nin}
                            td #{credit.location}
                            td #{credit.contact}
                            td #{credit.itemName}
                            td #{credit.type}
                            td #{credit.quantity}
                            td #{credit.amount}
                            td #{moment(credit.date).format("DD-MM-YYYY")}
                            td #{credit.agent}
                            td #{moment(credit.date).format("DD-MM-YYYY")}
                            
                            
                            td
                                form(method="POST", action="/sale/credit-list")
                                    input(type="hidden", name="_id", value=credit._id)
                                    button(type="submit")
                                        span.material-symbols-sharp(style='color:rgb(248, 244, 12)')
                                            | delete
                            
                            td  
                                a(href="/sale/editCredit/" + credit._id)
                                    span.material-symbols-sharp(style='color:rgb(248, 244, 12)')
                                            | edit
                                br
                a(href='/sale/new-credit' style='items-align:center') Record Another Credit Sale 
                br
                a(href='/sale') Sales Dashboard
            else
                p There are no registered credit sales posted              
            br                   
            a.btn.btn-warning(href="/logout") Log out
            
       
    script(src='/js/credit.js')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js' integrity='sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa' crossorigin='anonymous')
