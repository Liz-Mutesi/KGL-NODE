doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Document
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx' crossorigin='anonymous')
  link(rel="stylesheet", href="/css/productList.css")
  link(rel='stylesheet' href='https://fonts.googleapis.com/css2?family=Material+Symbols+Sharp')
body
    .container
    h3 Karibu Groceries Ltd
    h3(style='text-align:center; text-decoration:underline') Purchase List
    br
    p Total Purchases in UGX: #{totalPurchases.totalExpenses}
    p Total Purchases in KGs: #{totalPurchases.totalTonnage}
    if products.length
        table.table
            thead(style='background-color:rgb(204, 202, 202)')
                tr

                    th(scope='col') #
                    th(scope='col') Branch Name
                    th(scope='col') Produce Name
                    th(scope='col') Produce Type
                    th(scope='col') Quantity in Kgs
                    th(scope='col') Cost Price
                    th(scope='col') Amount
                    th(scope='col') Sell Price
                    th(scope='col') Supplier
                    th(scope='col') Contact No.
                    th(scope='col') Date
                    th(scope='col') Time
                    th(scope='col') Delete
                    th(scope='col') Edit
                   
                    
            tbody
            each product in products
                tr
                    td 
                    td #{product.branch}
                    td #{product.itemName}
                    td #{product.type}
                    td #{product.quantity}
                    td #{product.cost}
                    td #{product.amount}
                    td #{product.price}
                    td #{product.nameOfDealer}
                    td #{product.contactNumber}
                    td #{moment(product.date).format("DD-MM-YYYY")}
                    td #{product.time}

                    
                    td
                        form(method="POST", action="/product/product-list")
                            input(type="hidden", name="_id", value=product._id)
                            button(type="submit")
                                span.material-symbols-sharp(style='color: rgb(248, 244, 12)')
                                    | delete
                    
                    td
                        a(href="/product/editProduct/"+product._id)
                            span.material-symbols-sharp(style='color: rgb(248, 244, 12)')
                                    | edit
                            
        a(href='/product/product-form') Record Another Purchase
        br
        a(href='/product') Purchase Dashboard

    else
        p No items listed
    br
    a.btn.btn-warning(href="/logout") Log out
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js' integrity='sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa' crossorigin='anonymous')
