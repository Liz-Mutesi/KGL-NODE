doctype html

head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Document
  link(rel='stylesheet' href='')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
body
  form(name='registration' method='POST' action='/sale/new-order')
    .mb-3
      label.form-label(for='customer') Customer
      input#name.form-control(type='text' name='customer' value=order.customer)
    .mb-3
      label.form-label(for='type') Account Type
      input#age.form-control(type='text' name='type' value=order.type)
    .mb-3
      label.form-label(for='item') Product
      input#field.form-control(type='text' name='item' value=order.item)
    .mb-3
      label.form-label(for='quantity') Quantity
      input#salary.form-control(type='number' name='quantity' value=order.quantity)
    .mb-3
      label.form-label(for='price') Price
      input#salary.form-control(type='number' name='price' value=order.price)
    .mb-3
      label.form-label(for='amount') Amount
      input#salary.form-control(type='number' name='amount' value=order.amount)
    button.btn.btn-primary(type='submit') Submit
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
