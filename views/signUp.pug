doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Document
  link(rel='stylesheet' href='/css/signUp.css')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
body
    .container
        h4 Sign Up
        br
        .row
            form.col-md-4.offset-md-4(method="POST" action="/workers/signup" name="signup" style="items-align:left; background-color:rgb(231, 229, 236);height:100vh; color:rgb(29, 23, 88); padding-left:15rem; font-size:20px; border-radius:15px;")
                .mb-3
                label.form-label(for='firstname') First name
                    input#firstname.form-control(type='text' name='firstname' style='padding:10px')
                .mb-3
                    label.form-label(for='surname') Surname
                    input#surname.form-control(type='text' name='surname' style='padding:10px')
                .mb-3
                    label.form-label(for='email') Email
                    input#email.form-control(type='email' name='email' style='padding:10px')
                    
                .mb-3
                    label.form-label(for='password') Password
                    input#password.form-control(type='password' name='password' style='padding:10px')
                .mb-3
                    label.form-label(for='role') Role
                    input#role.form-control(type='text' name='role' style='padding:10px')
                    br
                    button.btn.btn-primary(type='submit') Submit
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
    script(src='/js/signUp.js')

