doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Document
  link(rel='stylesheet' href='/css/signUp.css')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
body
    .container
        .row
            h4 Sign Up
            br
            form.col-md-4.offset-md-4(method="POST" action="/workers/signup" name="signup" style= "background-color:rgb(231, 229, 236);height:100vh; color:rgb(29, 23, 88); font-size:20px; border-radius:15px;")
                .mb-3
                label.form-label(for='firstname') First name
                    input#firstname.form-control(type='text' name='firstname' style='padding:10px')
                .mb-3
                    label.form-label(for='surname') Surname
                    input#surname.form-control(type='text' name='surname' style='padding:10px')
                .mb-3
                    label.form-label(for='email') Email
                    input#email.form-control(type='email' name='email' style='padding:10px')
                    
                .mb-3
                    label.form-label(for='password') Password
                    input#password.form-control(type='password' name='password' style='padding:10px')
                .mb-3
                    label.form-label(for='branch') Branch 
                    select.form-control#branch(name="branch", style='padding:10px' required)
                        option(value="" selected disabled) Select Branch
                        option(value="Jinja") Jinja
                        option(value="Mubende") Mubende
                        option(value="Head_office") Head Office
                .mb-3
                    label.form-label(for='role') Role 
                    select.form-control#role(name="role", style='padding:10px' required)
                        option(value="" selected disabled) Select Role
                        option(value="director") Director
                        option(value="manager") Manager
                        option(value="sales_agent") Sales Agent
                    br
                    button.btn.btn-primary(type='submit') Submit
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
    script(src='/js/signUp.js')

