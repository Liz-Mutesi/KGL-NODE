doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel='stylesheet' href='/css/bootstrap/css/bootstrap.min.css')
        link(rel='stylesheet' href='/css/directorDash.css')
        link(rel='stylesheet' href="https://fonts.googleapis.com/css2?family=Material+Symbols+Sharp:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200")
        title Karibu Groceries
    body
        .sidebar
            .logo-details
                i.bx.bx
                img(src="/images/KARIBU.jpg", alt="logo", class='logo-img')
                span.logo_name
            ul.nav-links
                li
                    a.active(href='/managerDash' id='sideNav1')
                        span.material-symbols-sharp
                            | grid_view
                        span.links Dashboard
                li
                    a(href='/product/product-form')
                        span.material-symbols-sharp
                            | description
                        span.links_name New Purchase
                li
                    a(href='/product/product-list')
                        span.material-symbols-sharp
                            | edit_square
                        span.links_name Purchases List
                li
                    a(href='/stock-list')
                        span.material-symbols-sharp
                            | inventory
                        span.links_name Stock List
                li
                    a(href='#')
                        span.material-symbols-sharp
                            | person
                        span.links Suppliers
                li
                    a(href='#')
                        span.material-symbols-sharp
                            | report
                        span.links_name Reports
                li.log_out
                    a(href='/logout')
                        span.material-symbols-sharp
                            | logout
                        span.links Log out
    section.home-section
        nav
            .sidebar-button
                i.bx.bx-menu.sidebarBtn
                span.dashboard Dashboard
            .search-box
                input(type='text' placeholder='Search...')
                i.bx.bx-search
            .profile-details
                // <img src="images/profile.jpg" alt="">
                span.admin_name Hello #{user.firstname}
        .home-content
            .overview-boxes
                .box
                    .chart(data-percent='90')
                        h2 Monthly Purchases
                .box
                    .chart(data-percent='72')
                        h2 Quaterly Purchases
                .box
                    .chart(data-percent='81')
                        h2 Total Annual Purchases
        
            
                
